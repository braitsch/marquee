
$footerheight = 40px;

html {
	position: relative;
	min-height: 100%;
}
body {
	margin: 0 0 $footerheight;
	background url('/img/ice_age.png') repeat
}

.header{
	.logo{
		width 260px
		display block
		margin 18px auto 4px auto
	}
	color #333
	text-align center
	margin-bottom 20px
}

.content{
	width 100%
	#marquee{
		margin auto
	}
}

.footer{
	position: absolute;
	left: 0;
	bottom: 0;
	height: $footerheight;
	width: 100%;
	padding-top: 8px
	text-align center
	border-top 1px solid #eee;
	background-color:#fff;
	a{
		color #333
		text-decoration: none;
	}
	a:hover{
		color #a60707
	}
}

.modal-download{
	.modal-content{
		width 30vw
		margin auto
		min-width 220px
	}
	.card{
		height 20vw
	}
	img{
		width 100%
		height 100%
		object-fit contain
	}
	.btn{
		width 100%
	}
}
