
$footerheight = 60px;

html {
	position: relative;
	min-height: 100%;
}
body {
	margin: 0 0 $footerheight;
}

.navbar{
	.btn{
		min-width:100px;
		margin-right:5px;
	}
}
.navbar>.container .navbar-brand{
	margin-left:-8px;
}

.header{
	.logo{
		width 200px
		display block
		margin auto
	}
	text-align center
	margin-bottom 20px
}

.content{
	width 100%
	#marquee{
		margin auto
	}
}

.footer{
	position: absolute;
	left: 0;
	bottom: 0;
	height: $footerheight;
	width: 100%;
	padding-top: 10px
	text-align center
	background-color:#eee;
}

.modal-download{
	.modal-content{
		width 30vw
		margin auto
		min-width 220px
	}
	.card{
		height 20vw
	}
	img{
		width 100%
		height 100%
		object-fit contain
	}
	.btn{
		width 100%
	}
}

.modal-donate{
	.modal-dialog{
		width: 460px;
	}
	.radio-inline{
		margin-left: 34px;
	}
	.thanks{
		float:right;
		font-weight: bold;
		margin: 24px 10px 20px 0;
	}
	.modal-footer{
		clear:both;
	}
}

