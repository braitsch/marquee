
$footerheight = 40px;

html {
	position: relative;
	min-height: 100%;
}
body {
	margin: 0 0 $footerheight;
	background url('/img/ice_age.png') repeat
}

.navbar{
	.btn{
		min-width:100px;
		margin-right:5px;
	}
}
.navbar>.container .navbar-brand{
	margin-left:-8px;
}

.header{
	.logo{
		width 260px
		display block
		margin -40px auto 4px auto
	}
	color #333
	text-align center
	margin-bottom 20px
}

.content{
	width 100%
	#marquee{
		margin auto
	}
}

.footer{
	position: absolute;
	left: 0;
	bottom: 0;
	height: $footerheight;
	width: 100%;
	padding-top: 8px
	text-align center
	border-top 1px solid #eee;
	background-color:#fff;
	a{
		color #333
		text-decoration: none;
	}
	a:hover{
		color #a60707
	}
}

.modal-donate{
	.modal-body{
		font-size .95em;
	}
	.radios{
		margin 20px 0 10px 44px
	}
}

.modal-donate{
	.modal-dialog{
		width: 460px;
	}
	.radio-inline{
		margin-left: 34px;
	}
	.thanks{
		float:right;
		font-weight: bold;
		margin: 24px 10px 20px 0;
	}
	.modal-footer{
		clear:both;
	}
}

